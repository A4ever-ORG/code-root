# Bot Configuration
BOT_TOKEN=your_bot_token_here
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/telegram_store_hub

# Admin Configuration
ADMIN_CHAT_ID=your_telegram_chat_id

# Channel Configuration (for forced join)
FORCE_JOIN_CHANNEL_ID=@your_channel_username
FORCE_JOIN_CHANNEL_USERNAME=your_channel_username

# Payment Configuration
PAYMENT_CARD_NUMBER=1234-5678-9012-3456
PAYMENT_CARD_HOLDER=فروشگاه CodeRoot

# Plan Pricing (in Toman) - Optional overrides
FREE_PLAN_PRICE=0
PRO_PLAN_PRICE=50000
VIP_PLAN_PRICE=150000

# Commission Rates (percentage) - Optional overrides
FREE_PLAN_COMMISSION=5
PRO_PLAN_COMMISSION=5
VIP_PLAN_COMMISSION=0

# Feature Limits - Optional overrides
FREE_PLAN_PRODUCT_LIMIT=10
PRO_PLAN_PRODUCT_LIMIT=200
VIP_PLAN_PRODUCT_LIMIT=-1

# Session Secret (will be auto-generated in production)
SESSION_SECRET=your_session_secret_here